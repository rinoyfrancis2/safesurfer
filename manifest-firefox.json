{
  "manifest_version": 2,
  "name": "SafeSurfer",
  "version": "1.0.0",
  "description": "Cybersecurity extension for malware detection and typosquatting protection",
  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["lib/typosquat.js", "lib/virustotal.js", "background/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/typosquat.js", "lib/virustotal.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "safesurfer@example.com",
      "strict_min_version": "57.0"
    }
  }
}
